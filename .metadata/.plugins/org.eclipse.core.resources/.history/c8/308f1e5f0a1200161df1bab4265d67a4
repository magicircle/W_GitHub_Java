package org.javatutorials.eclipse.calendar;

import java.util.Scanner;

class cal_day{
	
	int[] month_c = {31,28,31,30,31,30,31,31,30,31,30,31};
	
	
	public void printout_month(int week_1, int month_i){
		for(int i=0;i<7;i++){
			String[] week_c = {"Sun","Mon","Tue","Wed","Thu","Fri","Sat"};
			System.out.printf("%3s ",week_c[i]);
		}
		
		System.out.println();
		
		for(int i=0;i<week_1;i++){
			System.out.printf("    ");
		}
		
		for(int i=1;i<=month_c[month_i];i++){
			System.out.printf("%3d ",i);
			week_1=week_1+1;
			if (week_1==7){
				week_1=0;
				System.out.println();
			}
		
		}
		
	}
	
}


public class calendar {
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		cal_day cal = new cal_day();
		Scanner scan_year = new Scanner(System.in);
		Scanner scan_month = new Scanner(System.in);
		int week_1,month_i;
		int year_c = 1583;
		while(scan_year.hasNextInt());
		month_i=scan_year.nextInt();
		scan_year.close();
		while(scan_month.hasNextInt());
		week_1=scan_month.nextInt();
		scan_month.close();
		cal.printout_month(week_1,month_i);
		
		
	}

}
